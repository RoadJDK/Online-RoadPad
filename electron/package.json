{
  "name": "roadpad",
  "version": "1.0.0",
  "description": "A better Notepad",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . roadpad --platform win32 --arch x64 --out dist/ --asar --icon=./icon.ico",
    "setup": "electron-installer-windows --src dist/roadpad-win32-x64/ --dest dist/installers/ --icon=./content/favicon/icon.ico"
  },
  "author": "RoadJDK",
  "license": "MIT",
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-packager": "^15.2.0",
    "electron-winstaller": "^5.0.0"
  },
  "dependencies": {
    "custom-electron-titlebar": "^3.2.7"
  }
}
